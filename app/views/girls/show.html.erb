<div class="page-header">
  <h1><a href=<%= @girl.url %>><%= @girl.title %></a><br> <small>Submitted by <%= @girl.user.name %></small></h1>
</div>

<div class="btn-group">

  <%= link_to 'Visit URL', @girl.url, class: "btn btn-primary" %>
</div>

<div class="btn-group pull-right">
  <%= link_to like_girl_path(@girl), method: :put, class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-up"></span>
      Upvote
      <%= @girl.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_girl_path(@girl), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
    Downvote
      <%= @girl.get_downvotes.size %>
    </span>
  <% end %>
</div>

<% if @girl.user == current_user -%>
    <div class="btn-group">
      <%= link_to 'Edit', edit_girl_path(@girl), class: "btn btn-default" %>
      <%= link_to 'Destroy', @girl, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
    </div>
<% end %>




