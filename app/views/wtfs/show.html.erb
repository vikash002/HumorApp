<div class="page-header">
  <h1><a href=<%= @wtf.url %>><%= @wtf.title %></a><br> <small>Submitted by <%= @wtf.user.name %></small></h1>
</div>

<div class="btn-group">

  <%= link_to 'Visit URL', @wtf.url, class: "btn btn-primary" %>
</div>

<div class="btn-group pull-right">
  <%= link_to like_wtf_path(@wtf), method: :put, class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-up"></span>
      Upvote
      <%= @wtf.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_wtf_path(@wtf), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
    Downvote
      <%= @wtf.get_downvotes.size %>
    </span>
  <% end %>
</div>

<% if @wtf.user == current_user -%>
    <div class="btn-group">
      <%= link_to 'Edit', edit_wtf_path(@wtf), class: "btn btn-default" %>
      <%= link_to 'Destroy', @wtf, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
    </div>
<% end %>




